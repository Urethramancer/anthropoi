{
	"version": "2.0.0",
	"type": "shell",
	"problemMatcher": [
		"$go"
	],
	"tasks": [
		{
			"label": "Build Release",
			"command": "go",
			"args": [
				"build",
				"-ldflags",
				"\"-w -s\""
			],
			"options": {
				"cwd": "${workspaceRoot}/cmd/anthropoi"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "Build Debug",
			"command": "go",
			"args": [
				"build"
			],
			"options": {
				"cwd": "${workspaceRoot}/cmd/anthropoi"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}